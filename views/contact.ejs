<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>iAcademy</title>
</head>

<body>
  <%- include('partials/nav'); -%>

  <div class="container my-4">
    <h2>Contact us </h2>
    <form class="needs-validation" novalidate method="POST">
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Name</label>
        <input class="form-control" name="name" id="exampleFormControlTextarea1" required>
        <div class="invalid-feedback">
          Please enter a Name.
        </div>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Subject</label>
        <input class="form-control" name="subject" id="exampleFormControlTextarea1" required>
        <div class="invalid-feedback">
          Please enter a Subject.
        </div>
      </div>

      <div class="form-group">
        <label for="exampleFormControlInput1">Email Id</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" name="email"
          placeholder="name@example.com" required>
        <div class="invalid-feedback">
          Please enter a Email Id.
        </div>
      </div>

      <div class="form-group">
        <label for="exampleFormControlInput1">Phone Number</label>
        <input pattern="[\d]{10}" maxlength="10" type="text" class="form-control" name="phone"
          id="exampleFormControlTextarea1" required>
        <div class="invalid-feedback">
          Please enter a Phone Number.
        </div>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Address</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="address" rows="2" required></textarea>
        <div class="invalid-feedback">
          Please enter a Address.
        </div>
      </div>
      <div class="form-group my-2">
        <label for="exampleFormControlTextarea1">Elaborate Your Query</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="desc" rows="2" required></textarea>
        <div class="invalid-feedback">
          Please enter a Query.
        </div>
      </div>
      <button class="btn btn-primary my-4" type="submit">
        Submit
      </button>
    </form>
   
  
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  

  
   <script>
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();

    
  </script>
  
</body>

</html>